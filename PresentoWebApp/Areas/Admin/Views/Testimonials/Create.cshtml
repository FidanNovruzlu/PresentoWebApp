@model CreateTestimonialsVM
<div class="row bg-title">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">Testimonials</h4> </div>
                    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                        </a>
                        <ol class="breadcrumb">
                            <li><a asp-action="Index" asp-controller="Dashboard">DashBoard</a></li>
                        </ol>
                    </div>
                </div>
<div id="page-wrapper">
    <div class="row">
         <div class="col-md-8 col-xs-12">
              <div class="white-box">
                   <form class="form-horizontal form-material" method="post" enctype="multipart/form-data">
                       <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label class="col-md-12" asp-for="Name"></label>
                            <div class="col-md-12">
                                <input type="text" placeholder="Name" class="form-control form-control-line" asp-for="Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                        </div>
                       <div class="form-group">
                            <label class="col-md-12" asp-for="Surname"></label>
                            <div class="col-md-12">
                                <input type="text" placeholder="Surname" class="form-control form-control-line" asp-for="Surname">
                                <span class="text-danger" asp-validation-for="Surname"></span>
                            </div>
                        </div>
                       <div class="form-group">
                            <label class="col-md-12" asp-for="Description"></label>
                            <div class="col-md-12">
                                <input type="text" placeholder="Bio" class="form-control form-control-line" asp-for="Description">
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                        </div>
                      <div class="form-group">
                            <label class="col-md-12" asp-for="ProfileImage"></label>
                            <div class="col-md-12">
                                <input placeholder="Profile Image" class="form-control form-control-line" asp-for="ProfileImage">
                                <span class="text-danger" asp-validation-for="ProfileImage"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-12">Jobs</label>
                            <div class="col-sm-12">
                                <select class="form-control form-control-line" asp-for="JobId">
                                @foreach (Job item in Model.Jobs)
                                {
                                         <option value="@item.Id">@item.Name</option>
                                }
                                </select>
                                <span class="text-danger" asp-validation-for="JobId"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <button class="btn btn-success" type="submit">Create Team</button>
                            </div>
                        </div>
                   </form>
              </div>
         </div>
    </div>
</div>