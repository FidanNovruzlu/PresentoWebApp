@{
    int count = 0;
}
@model List<Testimonials>
 <div class="container-fluid">
                <div class="row bg-title">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">Testimonials</h4> </div>
                    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <a asp-action="Create" target="_blank" class="btn btn-success pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light">Create</a>

                        </a>
                        <ol class="breadcrumb">
                            <li><a asp-action="Index" asp-controller="Dashboard">DashBoard</a></li>
                        </ol>
                    </div>
                </div>
                <!-- /row -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Image</th>
                                            <th>Last Name</th>
                                            <th>First Name</th>
                                            <th>Job</th>
                                            <th>Settings</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                            <td>@(++count)</td>
                                            <td><img style="width:100px" src="~/assets/img/testimonials/@item.ProfileImageName"/></td>
                                            <td>@item.Name</td>
                                            <td>@item.Surname</td>
                                            <td>@item.Job.Name</td>
                                            <td>
                                                <a asp-action="Read" asp-controller="Testimonials" asp-route-id="@item.Id"><button class="btn btn-info">Details</button></a>
                                                    <form method="post" asp-action="Update" asp-controller="Testimonials" asp-route-id="@item.Id">
                                                       <a><button class="btn btn-primary">Edit</button></a>
                                                </form>
                                                   <form method="get"><button class="btn btn-danger">Delete</button></form>
                                            </td>
                                        </tr>
                                
                            }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>